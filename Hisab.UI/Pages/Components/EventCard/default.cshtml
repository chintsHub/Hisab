@model EventCardVm

           <div class="card mb-3" >
               <div class="row no-gutters">
                   <div class="col-md-5">
                       <img style="width:100%; height:100%"  src="@Model.EventImagePath" alt="Card image cap" asp-append-version="true">
                   </div>
                   <div class="col-md-7">
                       <div class="card-body">
                           <h5 class="card-title"> @Model.EventName</h5>
                           <p class="card-text">
                               @Model.EventMessage
                           </p>
                           <a class="nav-link" asp-page="/app/events/Dashboard"  asp-route-id="@Model.EventId">View</a>
                       </div>
                   </div>
               </div>
           </div>
        