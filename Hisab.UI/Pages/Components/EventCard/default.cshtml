@model EventCardVm

           <div class="card" >
               <div class="row no-gutters">
                   <div class="col-md-5">
                       <img style="width:100%; height:100%"  src="@Model.EventImagePath" alt="Card image cap" asp-append-version="true">
                   </div>
                   <div class="col-md-7">
                       <div class="card-body">
                           <h5 class="card-title"> @Model.EventName </h5>
                           <p class="card-text">
                               @Model.EventMessage
                           </p>
                           
                           
                       </div>
                       <div class="card-footer tileFooter">
                           <a class="nav-link" style="float:left" asp-page="/app/events/Dashboard" asp-route-id="@Model.EventId">View</a>
                           <div style="float:right;color:white">@Model.CurrencySymbol</div>

                           <div class="clearfix"></div>
                       </div>
                   </div>
               </div>
           </div>
        