@model string

<header class="clearfix">
    <div class="hisabLogo">

        @if (User.Identity.IsAuthenticated)
        {
            <h1><a href="@Url.Page("/App/Events")">Hisab</a></h1>

        }
        else
        {
            <h1><a href="@Url.Page("Index")">Hisab</a></h1>
            <h2>Managing Trip Expenses, Simplified</h2>
        }
    </div>
    <form>
        @if (User.Identity.IsAuthenticated)
        {

            <button type="button"  class="btn btn-lg logoutButton dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Hey @Model <span class="caret"></span>
            </button>
            <ul class="dropdown-menu userMenu">

                <li><a asp-controller="AppHome" asp-action="Logout" class="">Log out</a></li>
                
                @if (User.IsInRole("Admin"))
                {
                    <li><a asp-page="/App/Admin/AllUsers">Admin</a></li>
                }
            </ul>

           

        }
        else
        {
            <a asp-page="LoginPage" class="loginButtonLink">Log in</a>
        }

    </form>

   
</header>