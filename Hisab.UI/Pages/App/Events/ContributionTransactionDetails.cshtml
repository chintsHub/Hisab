@page "/app/events/{id}/ContributionTransactionDetails/{transid}"
@model Hisab.UI.ContributionTransactionDetailsModel
@{
    ViewData["Title"] = "ContributionTransactionDetails";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div style="float:right; margin:10px">
    <button><i class="fa fa-undo-alt"></i> Back to Transactions</button>
</div>

<div class="clearfix"></div>

<div class="clearfix">


    <form>
        <div class="form-group row">
            <label for="contributionTitle" class="col-sm-2 col-form-label">Title:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="contributionTitle">
            </div>
        </div>
        <div class="form-group row">
            <label for="contributionDate" class="col-sm-2 col-form-label">Date:</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="contributionDate">
            </div>
        </div>
        <div class="form-group row">
            <label for="contributionAmount" class="col-sm-2 col-form-label">Amount:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="contributionAmount">
            </div>
        </div>


        <div id="equalSplitContent">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">From</th>
                        <th scope="col"></th>
                        <th scope="col">To</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>
                            <select class="browser-default custom-select">
                                <option selected>Open this select menu</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </td>
                        <td>
                            =>
                        </td>
                        <td>
                            <select class="browser-default custom-select">
                                <option selected>Open this select menu</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </td>
                    </tr>






                </tbody>


            </table>
        </div>






        <div class="alert alert-info">The total expense of 5000 paid by abc will be equally split among def, bef, cdf.</div>

        <div class="row transactionFooter">
            <div class="col-11 col-xs-11 transactionButtons">

                <button><i class="fa fa-edit"></i> Save</button>

                <div class="dropdown">
                    <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-exclamation-circle"></i> Ask payer to
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Check Transaction Amount</a>
                        <a class="dropdown-item" href="#">Check Split</a>
                        <a class="dropdown-item" href="#">Exclude me from the split</a>
                    </div>
                </div>
            </div>
        </div>


    </form>

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading alertHeading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse1">Alerts</a>
                </h4>
            </div>
            <div id="collapse1" class="panel-collapse collapse">
                <ul class="list-group">
                    <li class="list-group-item">One</li>
                    <li class="list-group-item">Two</li>
                    <li class="list-group-item">Three</li>
                </ul>
                <div class="panel-footer">Footer</div>
            </div>
        </div>
    </div>
</div>




