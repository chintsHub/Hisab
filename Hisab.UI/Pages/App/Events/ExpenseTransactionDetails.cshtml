@page "/app/events/{id}/ExpenseTransactionDetails/{transid}"

@model Hisab.UI.ExpenseTransactionDetailsModel
@{
    ViewData["Title"] = "ExpenseTransactionDetails";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 style="float:left; margin:10px">Add Expense</h1>

<div style="float:right; margin:10px" class="pageButton">
    <a asp-page="/app/events/dashboard" asp-route-id="@Model.ExpenseVM.EventId"><i class="fa fa-undo-alt"></i> Back </a>
</div>

<div class="clearfix"></div>

<div>

    
    <form method="post">

        <div class="slider sliderContent">
            <div>
                <h1><strong>Step 1 - Expense Details</strong></h1>

                <div class="form-group row">
                    <label for="expenseTitle" class="col-sm-2 col-form-label">Expense Description:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="@Model.ExpenseVM.ExpenseDescription">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="expenseDate" class="col-sm-2 col-form-label">Expense Date:</label>
                    <div class="col-sm-10">
                        <input type="datetime-local" class="form-control" id="expenseDate" asp-for="@Model.ExpenseVM.ExpenseDate">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="expenseDate" class="col-sm-2 col-form-label">Expense Amount:</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="number" asp-for="@Model.ExpenseVM.ExpensePaid" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="expenseDate" class="col-sm-2 col-form-label">Paid by:</label>
                    <div class="col-sm-10">
                       <select asp-for="@Model.ExpenseVM.ExpensePaidById" asp-items="@(new SelectList(Model.ExpenseVM.PaidByList,"Id","Name"))">

                       </select>
                    </div>
                </div>


            </div>
            <div>
                <h1><strong>Step 2 - Split</strong> </h1>
                <h3><i>You can exclude friends by simply unchecking them</i></h3>

                <table class="table">
                    <thead>
                        <tr>

                            <th scope="col">Friends</th>
                            @*<th scope="col">Percentage Split</th>*@
                        </tr>
                    </thead>
                    @for (var i = 0; i < Model.ExpenseVM.ExpenseSharedWith.Count(); i++)
                    {
                        <tr>

                            <td>
                                <div class="custom-control custom-checkbox checkbox-xl " style="margin:5px">

                                    <input type="checkbox" class="custom-control-input" asp-for="@Model.ExpenseVM.ExpenseSharedWith[i].IsShared">
                                    <label class="custom-control-label" asp-for="@Model.ExpenseVM.ExpenseSharedWith[i].IsShared">
                                        @Model.ExpenseVM.ExpenseSharedWith[i].Name
                                    </label>

                                </div>

                            </td>
                            @*<td>
                                <input class="form-control" type="number" asp-for="@Model.ExpenseVM.ExpenseSharedWith[i].SharePercent" />
                            </td>*@

                        </tr>
                    }
                    @*<tfoot>
                        <tr>
                            <td>Total</td>
                            <td>100%</td>
                        </tr>
                    </tfoot>*@
                </table>
            </div>
            <div>
                <h1><strong>Step 3 - Confirmation</strong> </h1>
                <div class="alert alert-info">The total expense of 5000 paid by abc will be equally split among def, bef, cdf.</div>
                <div class="col-11 col-xs-11 transactionButtons">

                    <button><i class="fa fa-edit"></i> Save</button>


                </div>
            </div>

        </div>







    </form>


</div>


@section Scripts{

    <script>
        $(document).ready(function () {
            $(".slider").slick({

                // normal options...
                infinite: false,
                

                // the magic
                responsive: [{

                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 1,
                        infinite: true
                    }

                }, {

                    breakpoint: 600,
                    settings: {
                        slidesToShow: 1,
                        dots: true
                    }

                }, {

                    breakpoint: 300,
                    settings: "unslick" // destroys slick

                }]
            });
        });
    </script>

}
