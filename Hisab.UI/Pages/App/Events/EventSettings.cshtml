@page "/app/events/{id}/settings"
@model Hisab.UI.EventSettingsModel
@{
    ViewData["Title"] = "EventSettings";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<form>
    <div class="form-group row">
        <label for="eventTitle" class="col-sm-2 col-form-label">Event title:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="eventTitle">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Event Image:</label>
        <div class="col-sm-10">
            <select class="browser-default custom-select">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
    </div>

    <div class="col-11 col-xs-11 transactionButtons">

        <button><i class="fa fa-edit"></i> Save</button>

       
    </div>
</form>