@page "/app/events/{id}/dashboard"
@model Hisab.UI.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

    <div class="container">
        @Html.HiddenFor(x => x.Event.EventId)
        <div class="row">
            <div class="col-6 col-md-4 eventDashboardTiles">
                <div class="card ">
                    <div class="card-body">

                        <h5 class="card-title">My Expenses</h5>
                        <div id="expenseSpinner" class="spinner-border" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <p id="expenseContent" class="card-text"></p>

                    </div>
                    <div class="card-footer tileFooter">
                        <a asp-page="/app/events/AddExpenseTransaction" asp-route-id="@Model.Event.EventId">
                            <i class="fa fa-plus-square"></i> Add Expense
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 eventDashboardTiles">
                <div class="card ">
                    <div class="card-body">

                        <h5 class="card-title">Total Expenses</h5>
                        <div id="AllexpenseSpinner" class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                        </div>
                        <p id="AllexpenseContent" class="card-text"></p>

                    </div>
                    <div class="card-footer tileFooter">
                        <a asp-page="/app/events/Transactions" asp-route-id="@Model.Event.EventId">
                            Details <i class="fa fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 eventDashboardTiles">
                <div class="card ">
                    <div class="card-body">
                        <h5 class="card-title">I owe Friends</h5>
                        <div id="AmountIOweToFriendsSpinner" class="spinner-border" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <p id="AmountIOweToFriendsContent" class="card-text"></p>

                    </div>
                    <div class="card-footer tileFooter">
                        <a asp-page="/app/events/EventSettlement"asp-route-id="@Model.Event.EventId">
                            <i class="fa fa-handshake"></i> Settle
                        </a>


                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 eventDashboardTiles">
                <div class="card ">
                    <div class="card-body">
                        <h5 class="card-title">Friends owe me</h5>
                        <div id="AmountFriendsOweToMeSpinner" class="spinner-border" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <p id="AmountFriendsOweToMeContent" class="card-text"></p>

                    </div>
                    <div class="card-footer tileFooter">
                        <a asp-page="/app/events/EventSettlement" asp-route-id="@Model.Event.EventId">
                            <i class="fa fa-handshake"></i> Settle
                        </a>


                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 eventDashboardTiles">
                <div class="card ">
                    <div class="card-body">
                        <h5 class="card-title">My Contributions</h5>
                        <div id="MyContributionsSpinner" class="spinner-border" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <p id="MyContributionsContent" class="card-text"></p>

                    </div>
                    <div class="card-footer tileFooter">
                        <a asp-page="/app/events/AddContributionTransaction" asp-route-id="@Model.Event.EventId" asp-page-handler="ToFriend">
                            <i class="fa fa-wallet"></i> Lend money
                        </a>

                    </div>
                </div>
            </div>

            <div class="col-6 col-md-4 eventDashboardTiles">
                <div class="card ">
                    <div class="card-body">
                        <h5 class="card-title">Money Pool</h5>
                        <div id="EventAccountBalanceSpinner" class="spinner-border" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <p id="EventAccountBalanceContent" class="card-text"></p>

                    </div>
                    <div class="card-footer tileFooter">

                        <a asp-page="/app/events/AddContributionTransaction" asp-route-id="@Model.Event.EventId">
                            <i class="fa fa-piggy-bank"></i> Deposite
                        </a>

                    </div>
                </div>
            </div>



        </div>

    </div>


<div class="container friendsContainer">

    @if (Model.IsLoggedInUserTheEventAdmin)
    {
        <div class="row">

            <div class="col-12 text-right">
                <div style="margin:5px">
                    <p>
                        <a class="pageButton" asp-page="EventFriends" asp-route-id="@Model.Event.EventId">
                            <i class="fa fa-plus-square"></i> Invite Friends
                        </a>
                    </p>

                </div>
            </div>
        </div>
    }


    <div class="card-columns">
        @*for loop starts here*@
        @foreach (var friend in Model.Event.Friends)
        {
            <div class="card">
                <div class="row no-gutters">
                    <div class="col-2">
                        <div>
                            <img class="friendImage" src="@friend.Avatar.AvatarImagePath" alt="Avatar" asp-append-version="true">
                        </div>

                    </div>
                    <div class="col-10">
                        <div class="card-body">
                            <div><p>@friend.Name</p></div>
                            <div><p>@friend.Email</p></div>
                            <div><p>@friend.Status</p></div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>


</div>


@section Scripts{

    <script src="~/js/Dashboard.js" asp-append-version="true"></script>

}

