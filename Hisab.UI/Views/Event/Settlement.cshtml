@using System.Linq
@model Hisab.UI.ViewModels.EventVm
@{
    ViewData["Title"] = "Settlement";
    Layout = "~/Views/Shared/_EventLayout.cshtml";
}

<h2>Settlement</h2>


<table class="table">
    <thead>
        <tr>
            <th scope="col">
                #
            </th>
            @foreach (var m in @Model.SettlementHeader.Receivers)
            {
                <th scope="col">
                   Pay to: @m.Key
                </th>
            }
        </tr>
    </thead>
    <tbody>

        @foreach (var row in Model.SettlementHeader.Payers)
        {
            <tr>
            @for (int j = 1; j <= @Model.SettlementHeader.Columns; j++)
            {
                if (j == 1)
                {
                    <td>
                        @row.Key
                    </td>
                }
                else
                {

                    var val = Model.SettlementHeader.Settlements.FirstOrDefault(x => x.PayerFriend == row.Key && x.ReceiverColumnId == j);
                    if (val != null)
                    {
                        <td>
                            @val.Amount
                        </td>
                        
                    }
                    else
                    {
                        <td></td>
                    }

                }

            }
            </tr>
        }
        
    

      

        </tbody>
    </table>
