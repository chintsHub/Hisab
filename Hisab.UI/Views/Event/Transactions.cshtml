@model Hisab.UI.ViewModels.EventVm
@{
    ViewData["Title"] = "Transactions";
    Layout = "~/Views/Shared/_EventLayout.cshtml";
}

<h2>Transactions</h2>

<table class="table">
    <thead>
    <tr>
        
        <th scope="col">Transaction Date</th>
        <th scope="col">Created By</th>
        <th scope="col">Description</th>
        <th scope="col">Amount</th>
        <th scope="col">Type</th>
        
        <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    
            @for (var i = 0; i < Model.Transactions.Count; i++)
            {
                <tr>

                    <td>
                        @Model.Transactions[i].CreatedDateTime

                    </td>
                    <td>
                        @Model.Transactions[i].NickName

                    </td>
                    <td>
                        @Model.Transactions[i].Description

                    </td>
                    <td>
                        @Model.Transactions[i].TotalAmount

                    </td>
                    <td>
                        @Model.Transactions[i].SplitType

                    </td>
                    
                    <td>
                       
                    </td>
            </tr>
        }
    
    </tbody>
</table>



