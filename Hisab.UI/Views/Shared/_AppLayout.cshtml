<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Hisab</title>
    
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
</head>

<body>




    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #0072ac">
        <a class="navbar-brand" href="#">Hisab</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="AppHome" asp-action="Index">Home </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AppHome" asp-action="Invites">Invites</a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AppHome" asp-action="Admin">Admin</a>
                    </li>
                }



            </ul>
            <div>
                <ul class="navbar-nav">
                    
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                               @User.Identity.Name
                            </li>
                        }
                   
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Settings
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-controller="AppHome" asp-action="UserSettings">User Settings</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="AppHome" asp-action="Logout">Logout</a>
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </nav>





    <section class="appBody">
        @RenderBody()


    </section>

    <footer class="text-muted">
        <div class="container">
            <p class="float-right">
                <a href="#">Back to top</a>
            </p>
            <p>Copyright (c) Hisab</p>
            
        </div>
    </footer>





@await Component.InvokeAsync("NToastNotify")


    @RenderSection("scripts", false)

   

</body>
</html>
